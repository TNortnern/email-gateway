# Database connection string (required)
DATABASE_URL=postgresql://user:password@host:port/database

# Brevo API Key (required)
BREVO_API_KEY=your-brevo-api-key-here

# Default sender email and name
DEFAULT_FROM_EMAIL=support@tnorthern.com
DEFAULT_FROM_NAME=Support

# Secret token to verify Brevo webhook calls (required if you enable open/click tracking ingestion)
BREVO_WEBHOOK_TOKEN=your-random-secret

# Optional: email notifications when events are received (comma-separated list)
# Example: send internal notifications to invoices@tnorthern.com when a recipient opens/clicks
EVENT_NOTIFY_TO=invoices@tnorthern.com
EVENT_NOTIFY_EVENTS=opened,clicked,delivered,hard_bounce,soft_bounce,spam,unsubscribed
# Optional override sender for notifications (defaults to DEFAULT_FROM_*)
EVENT_NOTIFY_FROM_EMAIL=
EVENT_NOTIFY_FROM_NAME=

# Admin password for UI access
ADMIN_PASSWORD=your-secure-admin-password
