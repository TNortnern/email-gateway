# Database connection string (required)
DATABASE_URL=postgresql://user:password@host:port/database

# Brevo API Key (required)
BREVO_API_KEY=your-brevo-api-key-here

# Default sender email and name
DEFAULT_FROM_EMAIL=support@tnorthern.com
DEFAULT_FROM_NAME=Support

# Secret token to verify Brevo webhook calls (required if you enable open/click tracking ingestion)
BREVO_WEBHOOK_TOKEN=your-random-secret

# Admin password for UI access
ADMIN_PASSWORD=your-secure-admin-password
